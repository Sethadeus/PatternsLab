<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="State.Main"
            prefHeight="350.0"
            prefWidth="400.0"
            style="-fx-background-color: white;">
    <Group style="-fx-background-color: white;">
        <HBox spacing="10">
            <VBox style="-fx-background-color: white;">
                <Button fx:id="happyBtn"
                        onMouseClicked="#onHappyButtonClick"
                        text="Каникулы"
                        style="-fx-background-color: #f8ce2c; -fx-text-fill: black; -fx-font-size: 18px; -fx-pref-width: 120px; -fx-border-radius: 5px; -fx-border-color: black; -fx-border-width: 1px;"/>
                <Button fx:id="sadBtn"
                        onMouseClicked="#onSadButtonClick"
                        text="Сессия"
                        style="-fx-background-color: #f8ce2c; -fx-text-fill: black; -fx-font-size: 18px; -fx-pref-width: 120px; -fx-border-radius: 5px; -fx-border-color: black; -fx-border-width: 1px;"/>
                <Button fx:id="sleepBtn"
                        onMouseClicked="#onSleepButtonClick"
                        text="Семестр"
                        style="-fx-background-color: #f8ce2c; -fx-text-fill: black; -fx-font-size: 18px; -fx-pref-width: 120px; -fx-border-radius: 5px; -fx-border-color: black; -fx-border-width: 1px;"/>
            </VBox>
            <ImageView fx:id="imageView"
                       fitWidth="320"
                       fitHeight="320"/>
        </HBox>
    </Group>
</AnchorPane>
